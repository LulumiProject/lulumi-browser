{
  "extends": [
    "tslint-config-airbnb"
  ],
  "rules": {
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": false,
    "no-trailing-whitespace": [
      true,
      "ignore-comments"
    ],
    "no-var-keyword": true,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-whitespace"
    ],
    "semicolon": [
      true
    ],
    "triple-equals": true,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ],
    "import-name": false,
    "whitespace": true,
    "max-line-length": [
      true,
      100
    ],
    "no-console": [
      true,
      "log",
      "error"
    ],
    "radix": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ]
  }
}
